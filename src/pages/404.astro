---
import Layout from 'src/layouts/Layout.astro';
import AstroIcon from '@components/icons/AstroIcon.astro';
---

<Layout title="404" description="404">
	<div
		class="bg-gray-800 flex-1 flex flex-col gap-4 items-center p-4 justify-center h-full w-full m-auto"
	>
		<center class="flex flex-col items-center font-bold text-2xl mt-6">
			<ul class="flex gap-6 items-center font-bold text-2xl mt-6">
				<li
					class="dark:bg-grey-800 h-20 w-20 flex items-center justify-center"
				>
					<AstroIcon />
				</li>
			</ul>
			<div class="tracking-widest my-10">
				<span class="text-gray-500 my-4 text-6xl block font-bold"
					><span>4 0 4</span></span
				>
				<span class="text-gray-500 my-4 text-2xl font-semibold"
					>Sorry, We couldn't find what you are looking for!</span
				>
			</div>
			<center class="mt-6">
				<a
					href="/"
					class="text-gray-500 text-xl bg-gray-200 p-3 rounded-md"
					>Go back
				</a>
			</center>
		</center>
	</div>
</Layout>
